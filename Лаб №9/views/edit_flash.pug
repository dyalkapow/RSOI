html
    head
        style
            include ../css/style.css
        title= title
    header
    body
        div(class='container')
            div(class='main-content')
                nav
                    h2= 'Навигация'
                    a(href='/')= 'Главная'
                    br
                    br
                    a(href='/add-flash')= 'Новый предмет'
                div(class='content-wrap')
                    h2= 'Редактирование флешки'
                    form(action='/edit-flash-post' method='post')
                        label= 'Уникальный номер'
                        br
                        input(type="text"  placeholder="Номер" id="_id" name="_id" value=flash._id readonly)
                        br
                        label= 'Введите производителя'
                        br
                        input(type="text" placeholder="производитель" id="flashMaker" name="flashMaker" value=flash.flashMaker  pattern="[А-яёЁA-z0-9 ][А-яёЁA-z0-9 -]{1,49}")
                        br
                        label= 'Объем памяти'
                        br
                        input(type="number" min="1" max="50" placeholder="объем памяти" id="flashMemory" name="flashMemory" value=flash.flashMemory required)
                        br
                        label= 'Срок гарантии'
                        br
                        input(type="number" min="6" max="36" placeholder="срок гарантии" id="flashGuarantee" name="flashGuarantee" value=flash.flashGuarantee required)
                        br
                        label= 'Количество'
                        br
                        input(type="number" min="1" max="1000" placeholder="количество" id="flashCount" name="flashCount" value=flash.flashCount required)
                        br
                        button= 'Изменить'
                    h3
                    form(action='/delete-flash' method='post')
                        input(type="hidden" name="flashId" id="flashId" value=flash._id)
                        button= 'удалить'
                aside
                    h2= 'Здесь может быть Ваша реклама'
    footer= '2019 © 1+1 media'